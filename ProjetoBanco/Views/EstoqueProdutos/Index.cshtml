@model IEnumerable<ProjetoBanco.Models.Estoque_Produtos>

@{
    ViewBag.Title = "Estoque de Produtos";
}

<h2>Itens da tabela de Estoque de Produtos</h2>

<p>
    @Html.ActionLink("Criar Novo Item", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sequencia_Estoque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_Produto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sequencia_Estoque)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Produto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Sequencia_Estoque }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Sequencia_Estoque }) |
            @Html.ActionLink("Deletar", "Delete", new { id = item.Sequencia_Estoque })
        </td>
    </tr>
}

</table>
