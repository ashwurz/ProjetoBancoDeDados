@model IEnumerable<ProjetoBanco.Models.Materia_Prima>

@{
    ViewBag.Title = "Materia Prima";
}

<h2>Itens da tabela de Materia Prima</h2>

<p>
    @Html.ActionLink("Criar nova Materia Prima", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Custo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade_Estoque)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Custo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade_Estoque)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { nome = item.Nome}) |
            @Html.ActionLink("Detalhes", "Details", new { nome = item.Nome}) |
            @Html.ActionLink("Deletar", "Delete", new { nome = item.Nome})
        </td>
    </tr>
}

</table>
